<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <com.app.sb.sbservices.Utils.ClanProTextView
        android:id="@+id/homeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp"
        android:text="Home Maintenance Services"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/homeText">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerView"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/viewMoreServcies"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:text="View More Services"
            android:textColor="@color/white"
            android:background="@drawable/another_button_background"
            />

    </LinearLayout>
</RelativeLayout>