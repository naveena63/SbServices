<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_gravity="center"

    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="@dimen/dimen_2dp"
        app:cardMaxElevation="2dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="5sp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/approximate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins"
                android:text="approximate"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/approximateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins"
                android:text="makes us to think in peace of mind which makes us to motivate in completing our daily work activities as well."
                android:textAlignment="center"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/Exclusion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins"
                android:text="Exclusion"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins"
                android:text="makes us to think in peace of mind which makes us to motivate in completing our daily work activities as well."
                android:textAlignment="center"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/Inclusion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins"
                android:text="Inclusion"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins"
                android:text="makes us to think in peace of mind which makes us to motivate in completing our daily work activities as well."
                android:textAlignment="center"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/Equipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins"
                android:text="Equipment"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins"
                android:text="makes us to think in peace of mind which makes us to motivate in completing our daily work activities as well."
                android:textAlignment="center"
                android:textColor="@color/black" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>
